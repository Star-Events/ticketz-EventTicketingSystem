<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EventTicketingSystem</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EventTicketingSystem.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="border-bottom bg-white">
        <nav class="navbar navbar-expand-lg container">
            <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">StarEvents</a>
             <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#mainNav" aria-controls="mainNav"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="mainNav">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <!-- Events always visible -->
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Events" asp-action="Index">Events</a>
                </li>

                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    if (User.IsInRole("Customer"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Bookings" asp-action="My">My Bookings</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Tickets" asp-action="Wallet">Tickets</a>
                        </li>
                    }
                    else if (User.IsInRole("Organizer"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="OrgEvents" asp-action="Index">My Events</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="OrgReports" asp-action="Index">Reports</a>
                        </li>
                    }
                    else if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Admin" asp-action="Dashboard">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="AdminUsers" asp-action="Index">Users</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="AdminVenues" asp-action="Index">Venues</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="AdminDiscounts" asp-action="Index">Discounts</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="AdminReports" asp-action="Index">Reports</a>
                        </li>
                    }
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="About">About</a>
                    </li>
                }
            </ul>
            <div class="d-flex gap-2">
                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <span class="navbar-text me-2">Hello, @User.Identity.Name!</span>
                    <form method="post" asp-controller="Auth" asp-action="Logout">
                        <button class="btn btn-outline-dark" type="submit">Logout</button>
                    </form>
                }
                else
                {
                    <a class="btn btn-outline-dark" asp-controller="Auth" asp-action="Login">Login</a>
                    <a class="btn btn-dark" asp-controller="Auth" asp-action="Register">Register</a>
                }
            </div>
        </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Ticketz - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
