@model EventTicketingSystem.Models.EventCardVm

@functions {
    string StatusClass(string s) => s?.ToLower() switch
    {
        "live" => "success",
        "upcoming" => "secondary",
        "completed" => "dark",
        "cancelled" => "danger",
        _ => "secondary"
    };
}

<div class="card border-0 shadow-sm h-100">
    <div class="card-body d-flex flex-column">
        <div class="d-flex justify-content-between align-items-start mb-1">
            <h3 class="h5 card-title mb-0">@Model.Title</h3>
            <span class="badge text-bg-@StatusClass(Model.Status)">@Model.Status</span>
        </div>

        <div class="text-muted small mb-2">@Model.DateTime â€¢ @Model.Venue</div>
        <div class="fw-semibold mb-3">@Model.Price</div>
        <div class="small text-muted mb-3">Sold: @Model.Availability</div>

        <div class="mt-auto d-flex gap-2">
            <a class="btn btn-outline-secondary" asp-controller="Events" asp-action="Details"
                asp-route-id="@Model.EventId">
                View Details
            </a>

            @if (Model.CanBuy)
            {
                <a class="btn btn-dark" asp-controller="Checkout" asp-action="Start" asp-route-id="@Model.EventId">
                    Book Now
                </a>
            }
            else
            {
                <button class="btn btn-dark" type="button" disabled title="Sales not open">
                    Book Now
                </button>
            }
        </div>
    </div>
</div>
