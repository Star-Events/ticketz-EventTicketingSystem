@model IEnumerable<EventTicketingSystem.Models.EventCardVm>
@{
    ViewData["Title"] = "Events";
}

<section class="p-4 p-md-5 mb-4 bg-white rounded-3 shadow-sm">
    <div class="row align-items-center g-4">
         <div class="col-md-12">
            <div class="p-3 bg-dark text-white rounded-3">
                <div class="small text-uppercase opacity-75">Promo</div>
                <div class="h5 my-2">Use code <strong>ROCK10</strong> for 10% off</div>
                <div class="small opacity-75">Limited time offer.</div>
            </div>
        </div>
        <div class="col-md-12">
            <h1 class="display-6 fw-bold mb-2">Find your next event</h1>
            <p class="text-muted mb-4">Browse concerts, theatre, and cultural shows near you.</p>
            <form class="row g-2" method="get" action="/events">
                <div class="col-12 col-md-6">
                    <input class="form-control form-control-md" name="q" placeholder="Search events..." />
                </div>
                <div class="col-6 col-md-3">
                    <select class="form-select form-select-md" name="category">
                        <option value="">All Categories</option>
                        <option>Concerts</option>
                        <option>Theatre</option>
                        <option>Cultural</option>
                    </select>
                </div>
                <div class="col-6 col-md-3">
                    <button class="btn btn-dark btn-md w-100" type="submit">Search</button>
                </div>
            </form>
        </div>
       
    </div>
</section>

<section>
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h2 class="h4 m-0">Upcoming Events</h2>
        <a href="/events" class="small text-decoration-none">View all</a>
    </div>

    <div class="row g-3">
        @foreach (var e in Model)
        {
            <div class="col-12 col-md-6">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-1">
                            <h3 class="h5 card-title mb-0">@e.Title</h3>
                            <span class="badge text-bg-light">Available: @e.Availability</span>
                        </div>
                        <div class="text-muted small mb-2">@e.DateTime • @e.Venue</div>
                        <div class="fw-semibold mb-3">@e.Price</div>
                        <div class="d-flex gap-2">
                            <a class="btn btn-outline-secondary" href="/events/details/1">View Details</a>
                            <a class="btn btn-dark" href="/checkout">Book Now</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

