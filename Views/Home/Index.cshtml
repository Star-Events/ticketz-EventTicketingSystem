@model EventTicketingSystem.Models.HomeVm
@{
    ViewData["Title"] = "Home";
}

<section class="p-4 p-md-5 mb-4 bg-white rounded-3 shadow-lg mt-4">
    <div class="row align-items-center g-4">
        <div class="col-md-12 mt-4">
            <h1 class="display-6 fw-bold mb-2">Find your next event</h1>
            <p class="text-muted mb-4">Browse concerts, theatre, and cultural shows near you.</p>
            <form class="row g-2" method="get" action="/events">
                <div class="col-12 col-md-6">
                    <input class="form-control form-control-md" name="q" placeholder="Search events..." />
                </div>
                <div class="col-6 col-md-3">
                    <select class="form-select form-select-md" name="category">
                        <option value="">All Categories</option>
                        <option>Concerts</option>
                        <option>Theatre</option>
                        <option>Cultural</option>
                    </select>
                </div>
                <div class="col-6 col-md-3">
                    <button class="btn btn-dark btn-md w-100" type="submit">Search</button>
                </div>
            </form>
        </div>

    </div>
</section>

<div class="container py-4">

    <!-- Upcoming -->
    <div class="d-flex justify-content-between align-items-center mb-2">
        <h2 class="h5 mb-0">Upcoming Events</h2>
        <a class="btn btn-sm btn-outline-secondary" asp-controller="Events" asp-action="Index"
            asp-route-status="Upcoming">View all</a>
    </div>

    @if (Model.Upcoming?.Any() == true)
    {
        <div class="row g-3 mb-4">
            @foreach (var e in Model.Upcoming)
            {
                <div class="col-12 col-md-6">
                    @await Component.InvokeAsync("EventCard", new { model = e })
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-light border-0">No upcoming events to show.</div>
    }

    <!-- Live -->
    <div class="d-flex justify-content-between align-items-center mb-2">
        <h2 class="h5 mb-0">Live Now</h2>
        <a class="btn btn-sm btn-outline-secondary" asp-controller="Events" asp-action="Index"
            asp-route-status="Live">View all</a>
    </div>

    @if (Model.Live?.Any() == true)
    {
        <div class="row g-3">
            @foreach (var e in Model.Live)
            {
                <div class="col-12 col-md-6">
                    @await Component.InvokeAsync("EventCard", new { model = e })
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-light border-0">No live events right now.</div>
    }

</div>