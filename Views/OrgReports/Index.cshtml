@model EventTicketingSystem.Models.OrgReportsVm
@{
    ViewData["Title"] = "Sales Dashboard";
    string from = (string)ViewBag.From;
    string to = (string)ViewBag.To;

    string StatusClass(string s) => s?.ToLower() switch
    {
        "live" => "success",
        "upcoming" => "secondary",
        "completed" => "dark",
        "cancelled" => "danger",
        _ => "secondary"
    };
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h4 mb-0">Sales & Revenue</h1>
        <a class="btn btn-outline-secondary" asp-controller="OrgEvents" asp-action="Index">Back to My Events</a>
    </div>

    <form method="get" class="row g-2 mb-3">
        <div class="col-6 col-md-3">
            <label class="form-label">From</label>
            <input type="date" name="from" class="form-control" value="@from" />
        </div>
        <div class="col-6 col-md-3">
            <label class="form-label">To</label>
            <input type="date" name="to" class="form-control" value="@to" />
        </div>
        <div class="col-12 col-md-3 d-flex align-items-end">
            <button class="btn btn-dark w-100" type="submit">Apply</button>
        </div>
    </form>

    <!-- KPI cards -->
    <div class="row g-3 mb-3">
        <div class="col-12 col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="text-muted small">Tickets (Period)</div>
                    <div class="h4 mb-0">@Model.Summary.TicketsSoldPeriod</div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="text-muted small">Revenue (Period)</div>
                    <div class="h4 mb-0">LKR @Model.Summary.RevenuePeriod.ToString("N0")</div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="text-muted small">Events: Live / Upcoming</div>
                    <div class="h4 mb-0">@Model.Summary.EventsLive / @Model.Summary.EventsUpcoming</div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="text-muted small">Lifetime Revenue</div>
                    <div class="h4 mb-0">LKR @Model.Summary.RevenueLifetime.ToString("N0")</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Per-event table -->
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table align-middle">
                    <thead>
                        <tr>
                            <th>Event</th>
                            <th>Status</th>
                            <th class="text-end">Sold / Total</th>
                            <th class="text-end">Remaining</th>
                            <th class="text-end">Price</th>
                            <th class="text-end">Sold (Period)</th>
                            <th class="text-end">Bookings</th>
                            <th class="text-end">Revenue (Period)</th>
                            <th class="text-end">Last Sale</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var r in Model.Rows)
                        {
                            <tr>
                                <td>@r.Title</td>
                                <td><span class="badge text-bg-@StatusClass(r.Status)">@r.Status</span></td>
                                <td class="text-end">@r.SoldLifetime / @r.TotalTickets</td>
                                <td class="text-end">@r.Remaining</td>
                                <td class="text-end">LKR @r.Price.ToString("N0")</td>
                                <td class="text-end">@r.SoldPeriod</td>
                                <td class="text-end">@r.BookingsPeriod</td>
                                <td class="text-end">LKR @r.RevenuePeriod.ToString("N0")</td>
                                <td class="text-end">@((r.LastSaleAt?.ToString("dd MMM, h:mm tt")) ?? "â€”")</td>
                                <td class="text-end">
                                    <a class="btn btn-sm btn-outline-secondary" asp-controller="Events" asp-action="Details"
                                        asp-route-id="@r.EventId">
                                        View
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @if (Model.Rows.Count == 0)
            {
                <div class="alert alert-light border-0 shadow-sm">No events yet.</div>
            }
        </div>
    </div>
</div>
