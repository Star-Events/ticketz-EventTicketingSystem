@model EventTicketingSystem.Models.AdminReportsVm
@{
    ViewData["Title"] = "Admin Reports";
    string Money(decimal v) => $"LKR {v.ToString("N0")}";
    string Badge(string s) => s?.ToLower() switch
    {
        "live" => "success",
        "upcoming" => "secondary",
        "completed" => "dark",
        "cancelled" => "danger",
        _ => "secondary"
    };
    var fromStr = Model.FromDate.ToString("yyyy-MM-dd");
    var toStr = Model.ToDateExclusive.AddDays(-1).ToString("yyyy-MM-dd");
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="h4 mb-0">Admin Reports</h1>
            <div class="text-muted small">Sales & ticketing (bookings within selected range)</div>
        </div>
        <a class="btn btn-outline-secondary" asp-controller="Admin" asp-action="Index">Back to Dashboard</a>
    </div>

    <form method="get" class="row g-2 mb-3">
        <div class="col-12 col-md-3">
            <label class="form-label">From</label>
            <input type="date" class="form-control" name="from" value="@fromStr" />
        </div>
        <div class="col-12 col-md-3">
            <label class="form-label">To</label>
            <input type="date" class="form-control" name="to" value="@toStr" />
        </div>
        <div class="col-6 col-md-3 d-flex align-items-end">
            <button class="btn btn-dark w-100" type="submit">Apply</button>
        </div>
        <div class="col-6 col-md-3 d-flex align-items-end">
            <a class="btn btn-outline-secondary w-100" asp-action="ExportEventsCsv" asp-route-from="@fromStr"
                asp-route-to="@toStr">Export Events CSV</a>
        </div>
    </form>

    <!-- KPIs -->
    <div class="row g-3 mb-3">
        <div class="col-6 col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="text-muted small">Revenue</div>
                    <div class="h5 mb-0">@Money(Model.Kpi.Revenue)</div>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="text-muted small">Tickets Sold</div>
                    <div class="h5 mb-0">@Model.Kpi.TicketsSold</div>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="text-muted small">Bookings</div>
                    <div class="h5 mb-0">@Model.Kpi.TotalBookings</div>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="text-muted small">Unique Customers</div>
                    <div class="h5 mb-0">@Model.Kpi.UniqueCustomers</div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3">
        <!-- Revenue by Organizer -->
        <div class="col-12 col-lg-5">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="h6 mb-2">Revenue by Organizer</div>
                    <div class="table-responsive">
                        <table class="table align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Organizer</th>
                                    <th class="text-end">Tickets</th>
                                    <th class="text-end">Revenue</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.ByOrganizer.Count == 0)
                                {
                                    <tr>
                                        <td colspan="3">
                                            <div class="alert alert-light border-0 mb-0">No data for this range.</div>
                                        </td>
                                    </tr>
                                }
                                else
                                {
                                    @foreach (var o in Model.ByOrganizer)
                                    {
                                        <tr>
                                            <td>@o.OrganizerName</td>
                                            <td class="text-end">@o.Tickets</td>
                                            <td class="text-end fw-semibold">@Money(o.Revenue)</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Revenue by Event -->
        <div class="col-12 col-lg-7">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="h6 mb-2">Revenue by Event</div>
                    <div class="table-responsive">
                        <table class="table align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Event</th>
                                    <th>Status</th>
                                    <th class="text-end">Tickets</th>
                                    <th class="text-end">Price</th>
                                    <th class="text-end">Revenue</th>
                                    <th class="text-end">Starts</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.ByEvent.Count == 0)
                                {
                                    <tr>
                                        <td colspan="6">
                                            <div class="alert alert-light border-0 mb-0">No data for this range.</div>
                                        </td>
                                    </tr>
                                }
                                else
                                {
                                    @foreach (var e in Model.ByEvent)
                                    {
                                        <tr>
                                            <td>
                                                <div class="fw-semibold">@e.Title</div>
                                                <div class="text-muted small">@e.OrganizerName</div>
                                            </td>
                                            <td><span class="badge text-bg-@(Badge(e.Status))">@e.Status</span></td>
                                            <td class="text-end">@e.Tickets</td>
                                            <td class="text-end">LKR @e.Price.ToString("N0")</td>
                                            <td class="text-end fw-semibold">@Money(e.Revenue)</td>
                                            <td class="text-end">@e.StartsAt.ToString("dd MMM")</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>